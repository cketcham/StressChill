<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout android:id="@+id/relative_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <WebView android:id="@+id/image"
            android:layout_width="195sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background">
        </WebView>

        <TextView
            android:id="@+id/label_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:text="Stress Level:" />
        <TextView android:id="@+id/item_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_toRightOf="@id/label_0"
            android:textSize="20sp"
            android:text="" />

        <TextView
            android:id="@+id/label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_0"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:text="Category:" />
        <TextView
            android:id="@+id/item_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_1"
            android:textSize="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:text="" />

        <TextView
            android:id="@+id/label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:paddingLeft="10sp"
            android:paddingRight="5sp"
            android:text="Comments:" />
        <TextView
            android:id="@+id/item_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_2"
            android:textSize="20sp"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:text="" />
    </RelativeLayout>
</ScrollView>
